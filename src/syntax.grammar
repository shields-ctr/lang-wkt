@top WKT { Geometry* }

@skip { space | Comment }

Geometry {
  Point | LineString
}

Point { "POINT" "(" Number Number ")" }

LineString { "LINESTRING" "(" Coord2dList ")" }

Coord2dList { Coord2d (',' Coord2d)* }

Coord2d { X Y }

X { Number }

Y { Number }

Z { Number }

M { NUmber }

@tokens {  
  Name {$[a-zA-Z]}
  Number { $[0-9]+ }
  Comment { "//" ![\n]* }
  space { $[ \t\n\r]+ }
  "," "(" ")"
}

@detectDelim
